{{ if eq .chezmoi.os "linux" -}}
#!/usr/bin/env bash
# hash: {{ include ".chezmoidata/packages.yaml" | sha256sum }}
# profile: {{ .profile | default "basic" }}
{{ template "helpers.sh" . }}

set -e

{{- $profile := .profile | default "basic" }}

{{/* Collect custom installers: always basic, plus profile if not basic */}}
{{- $customInstallers := (index .packages "basic").custom | default list }}
{{- if ne $profile "basic" }}
{{- $profileCustom := (index .packages $profile).custom | default list }}
{{- range $profileCustom }}{{ $customInstallers = append $customInstallers . }}{{ end }}
{{- end }}

{{/* Merge linux packages: basic + profile (if profile has linux key) */}}
{{- $basicLinux := index .packages "basic" "linux" | default dict }}
{{- $profileLinux := dict }}
{{- $profileHasLinux := false }}
{{- if ne $profile "basic" }}
{{- $profileLinux = index .packages $profile "linux" | default dict }}
{{- if index .packages $profile "linux" }}{{ $profileHasLinux = true }}{{ end }}
{{- end }}

{{- $allApt := $basicLinux.apt | default list }}
{{- range ($profileLinux.apt | default list) }}{{ $allApt = append $allApt . }}{{ end }}

{{- $allBrews := $basicLinux.brews | default list }}
{{- range ($profileLinux.brews | default list) }}{{ $allBrews = append $allBrews . }}{{ end }}

{{- $allCasks := $basicLinux.casks | default list }}
{{- range ($profileLinux.casks | default list) }}{{ $allCasks = append $allCasks . }}{{ end }}

section "Linux Packages ({{ $profile }})"

{{ if and (ne $profile "basic") (not $profileHasLinux) -}}
warn "Profile '{{ $profile }}' has no linux packages, installing basic only"
{{ end -}}

# Install APT packages first (may be needed for curl-based installers)
{{ if $allApt -}}
if command -v apt-get >/dev/null 2>&1; then
    progress "Updating APT"
    if sudo apt-get update -qq >/dev/null 2>&1; then
        finish
    else
        failed
        exit 1
    fi

    progress "Installing APT packages ({{ $allApt | join ", " }})"
    if sudo apt-get install -y -qq {{ range $allApt }}{{ . }} {{ end }}>/dev/null 2>&1; then
        finish
    else
        failed
        exit 1
    fi
else
    warn "APT not found, skipping APT packages"
fi
{{ end -}}

# Install custom curl-based packages
{{ range $customInstallers -}}
{{- $installer := index $.custom . }}
if ! command -v {{ $installer.check }} >/dev/null 2>&1; then
    progress "Installing {{ . }}"
    if /bin/bash -c "$(curl -fsSL {{ $installer.url }})" >/dev/null 2>&1; then
        finish
        {{ if eq . "homebrew" -}}
        # Add Homebrew to PATH
        if [ -f "/home/linuxbrew/.linuxbrew/bin/brew" ]; then
            eval "$(/home/linuxbrew/.linuxbrew/bin/brew shellenv)"
        fi
        {{ end -}}
    else
        failed
        exit 1
    fi
else
    success "{{ . }} already installed"
fi
{{ end }}

# Install Homebrew packages (basic + profile)
{{ if or $allBrews $allCasks -}}
if command -v brew >/dev/null 2>&1; then
    {{- $allBrewPkgs := list }}
    {{- range $allBrews }}{{ $allBrewPkgs = append $allBrewPkgs . }}{{ end }}
    {{- range $allCasks }}{{ $allBrewPkgs = append $allBrewPkgs . }}{{ end }}
    progress "Installing brew packages ({{ $allBrewPkgs | join ", " }})"
    if brew bundle --quiet --file=/dev/stdin <<EOF >/dev/null 2>&1
{{ range $allBrews -}}
brew {{ . | quote }}
{{ end -}}
{{ range $allCasks -}}
cask {{ . | quote }}
{{ end -}}
EOF
    then
        finish
    else
        failed
        exit 1
    fi
fi
{{ end -}}
{{ end -}}
