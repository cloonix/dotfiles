# Local machine gopass files (copied during chezmoi apply)
# Format: gopass_path:destination
# This file is templated based on OS (darwin/linux)

{{- if eq .chezmoi.os "darwin" }}
# macOS-specific paths

# Environment variables (sourced by .zshrc)
config/shell/env:{{ .chezmoi.homeDir }}/.env

# Application configs
config/opencode/opencode.jsonc:{{ .chezmoi.homeDir }}/.config/opencode/opencode.jsonc
config/opencode/auth.json:{{ .chezmoi.homeDir }}/.local/share/opencode/auth.json

# SSH keys - uncomment if needed on this Mac
# ssh/git/id_ed25519:{{ .chezmoi.homeDir }}/.ssh/id_ed25519
# ssh/git/id_ed25519.pub:{{ .chezmoi.homeDir }}/.ssh/id_ed25519.pub
{{- end }}

{{- if eq .chezmoi.os "linux" }}
# Linux-specific paths

# Environment variables (sourced by .zshrc)
config/shell/env:{{ .chezmoi.homeDir }}/.env

# Application configs
config/opencode/opencode.jsonc:{{ .chezmoi.homeDir }}/.config/opencode/opencode.jsonc
config/opencode/auth.json:{{ .chezmoi.homeDir }}/.local/share/opencode/auth.json

# SSH keys - typically needed on Linux servers
ssh/git/id_ed25519:{{ .chezmoi.homeDir }}/.ssh/id_ed25519
ssh/git/id_ed25519.pub:{{ .chezmoi.homeDir }}/.ssh/id_ed25519.pub
{{- end }}
