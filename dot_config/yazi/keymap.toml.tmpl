[[mgr.prepend_keymap]]
on   = "f"
run  = "plugin jump-to-char"
desc = "Jump to char"

[[mgr.prepend_keymap]]
on   = [ "c", "m" ]
run  = "plugin chmod"
desc = "Chmod on selected files"

[[mgr.prepend_keymap]]
on   = [ "g", "i" ]
run  = "plugin lazygit"
desc = "run lazygit"

[[mgr.prepend_keymap]]
on  = "M"
run = "plugin mount"

[[mgr.prepend_keymap]]
on = [ "m" ]
run = "plugin bookmarks save"
desc = "Save current position as a bookmark"

[[mgr.prepend_keymap]]
on = [ "'" ]
run = "plugin bookmarks jump"
desc = "Jump to a bookmark"

[[mgr.prepend_keymap]]
on = [ "b", "d" ]
run = "plugin bookmarks delete"
desc = "Delete a bookmark"

[[mgr.prepend_keymap]]
on = [ "b", "D" ]
run = "plugin bookmarks delete_all"
desc = "Delete all bookmarks"

[[mgr.prepend_keymap]]
on   = [ "c", "a", "a" ]
run  = "plugin compress 7z"
desc = "Archive selected files"

[[mgr.prepend_keymap]]
on   = [ "c", "a", "p" ]
run  = "plugin compress -p 7z"
desc = "Archive selected files (password)"

[[mgr.prepend_keymap]]
on   = "T"
run  = "plugin toggle-pane max-preview"
desc = "Maximize or restore preview"

[[mgr.prepend_keymap]]
on   = [ "c", "f" ]
run  = "plugin smart-filter"
desc = "Smart filter"

[[mgr.prepend_keymap]]
on   = [ "<C-h>" ]
run  = "plugin toggle-pane hide-preview"
desc = "Hide or show preview pane"

[[mgr.prepend_keymap]]
on   = [ "g", "h" ]
run  = "cd ~"
desc = "Go to home directory"

[[mgr.prepend_keymap]]
on   = [ "g", "c" ]
run  = "cd ~/.config"
desc = "Go to config directory"

[[mgr.prepend_keymap]]
on   = [ "g", "d" ]
run  = "cd ~/Downloads"
desc = "Go to downloads"

[[mgr.prepend_keymap]]
on   = [ "g", "D" ]
run  = "cd ~/Documents"
desc = "Go to documents"

[[mgr.prepend_keymap]]
on   = [ "g", "." ]
run  = "cd ~/dotfiles"
desc = "Go to dotfiles"

[[mgr.prepend_keymap]]
on   = [ "Y", "p" ]
run  = "copy path"
desc = "Copy absolute path"

[[mgr.prepend_keymap]]
on   = [ "Y", "d" ]
run  = "copy dirname"
desc = "Copy directory path"

[[mgr.prepend_keymap]]
on   = [ "Y", "n" ]
run  = "copy filename"
desc = "Copy filename"

[[mgr.prepend_keymap]]
on   = [ "Y", "." ]
run  = "copy filename_without_ext"
desc = "Copy filename without extension"

# Unbind default 'q' behavior and use it for tab_close only
[[mgr.remove_keymap]]
on   = [ "q" ]

[[mgr.prepend_keymap]]
on   = "q"
run  = "tab_close"
desc = "Close current tab"

{{- if eq .chezmoi.os "darwin" }}

[[mgr.prepend_keymap]]
on   = [ "g", "t" ]
run  = 'shell "open -a Ghostty $PWD" --orphan --confirm'
desc = "Open current folder in Ghostty"
{{- end }}
