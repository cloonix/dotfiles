yts() {
  local lang="en"
  local f_lang="en"

  while [[ $# -gt 0 ]]; do
    case "$1" in
      -l)
        lang="$2"
        shift 2
        ;;
      -g=*)
        f_lang="${1#-g=}"
        shift
        ;;
      *)
        break
        ;;
    esac
  done

  ytt -l "$lang" "$@" \
    | f -g="$f_lang" -p youtube_summary \
    | glow -p
}
