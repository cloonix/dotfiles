{{- $azureKey := gopass "work/api/azure" -}}
{
  "github-copilot": {
    "type": "oauth",
    "refresh": "{{ output "gopass" "--password" "work/api/github" "refresh" | trim }}",
    "access": "{{ output "gopass" "--password" "work/api/github" "access" | trim }}",
    "expires": {{ output "gopass" "--password" "work/api/github" "expires" | trim }}
  },
  "fhgenie": {
    "type": "api",
    "key": "{{ gopass "work/api/fhgenie" }}"
  },
  "azure": {
    "type": "api",
    "key": "{{ $azureKey }}"
  },
  "azure-anthropic": {
    "type": "api",
    "key": "{{ $azureKey }}"
  },
  "azure-openai": {
    "type": "api",
    "key": "{{ $azureKey }}"
  },
  "azure-else": {
    "type": "api",
    "key": "{{ $azureKey }}"
  }
}
